@{
    ViewBag.Title = "Extended View";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>

<h2>Welcome to the Extended View!</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>Hello, @User.Identity.Name! You are authenticated.</p>
}
else
{
    <p>You are not authenticated. Please log in.</p>
}

<ul>
    @for (int i = 1; i <= 5; i++)
    {
        <li>Item @i</li>
    }
</ul>

@if (Model != null && Model.Any())
{
    <table>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
        </tr>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
            </tr>
        }
    </table>
}
else
{
    <p>No data available.</p>
}

<form method="post" action="/ExtendedView/SubmitForm">
    <label for="inputName">Name:</label>
    <input type="text" id="inputName" name="Name" required />

    <label for="inputEmail">Email:</label>
    <input type="email" id="inputEmail" name="Email" required />

    <button type="submit">Submit</button>
</form>

</body>
</html>
